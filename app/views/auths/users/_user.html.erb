<div class="box">
    <article class="media">
        <figure class="media-left">
            <p class="image is-128x128">
            <img src="https://bulma.io/images/placeholders/128x128.png">
            </p>
        </figure>
        <div class="media-content">
            <div class="content">
                <p>
                    <h4><strong><%= user.name %></strong></h4>
                    <%= user.email %> 
                    <% if logged_in? &&  user_equals?(@user) %>
                        <%= link_to 'Edit profile',edit_auths_user_path(user), style: 'position:relative; float:right'  %>
                    <% end %>
                    <br>
                    <hr>
                    <code> <%= "All Tweets #{user.tweets.count}" %> · <%= "All Retweets #{user.retweets.count}" %> · <%= "All Likes #{user.likes.count}" %> </code>
                </p>
            </div>
        </div>
    </article>
</div>