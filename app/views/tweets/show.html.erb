<%= render './shared/header', title_name: 'Tweet' %>


<div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
        <div class="box">
            <article class="media">
              <div class="media-left">
                <figure class="image is-64x64">
                  <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                </figure>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong>John Smith</strong> <small>@johnsmith</small> <small>31m</small>
                    <br>
                    <%= @tweet.tweet %>
                  </p>
                </div>
                <nav class="level is-mobile">
                  <div class="level-right">
                    <%= link_to 'Edit', edit_tweet_path(@tweet.id),class: 'level-item is-success' %>
                    <%= link_to 'Delete', root_path,{:remote => true,'data-toggle' =>  "modal", 'data-target' => '#modal','class' => 'level_item button_modal is-danger'}  %>
                    <%= link_to 'Cancel', root_path,class: 'level-item is-dark',style: 'margin-left: 12px;' %>
                  </div>
                </nav>
              </div>
            </article>
        </div>
    </div>
</div>