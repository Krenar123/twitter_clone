<br>
<div class="section">
<div class="columns">
    <div class="column is-6 is-offset-3">
        <%= form_with model: tweet, local: true do |form| %>
            <div class="field">
                <%= form.label :tweet, class:"label" %>
                <p class="control">

                    <%= form.text_field :tweet, class:"textarea", placeholder:"Your tweet" %>
                    <% if tweet.errors.any? %>
                        <% tweet.errors.full_messages.each do |msg| %>
                            <p class="is-danger"> <%= msg %> </p>
                        <% end %>
                    <% end %>
                </p>
            </div>
            
            <div class="field">
                <p class="control">
                    <%= form.submit button_name, class: 'button is-dark' %>
                    <%= link_to 'Cancel', our_path,class: 'button is-light' %>
                </p>
            </div>
        <% end %>
    </div>
</div>
</div>

