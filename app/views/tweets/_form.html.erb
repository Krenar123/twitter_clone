<% if tweet.errors.any? %>
<h2>
    <%= pluralize(tweet.errors.count,"error") %> not allowing this article to be saved.
</h2>
<ul>    
    <% tweet.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
</ul>
<% end %>
<br>
<div class="section">
<div class="columns">
    <div class="column is-6 is-offset-3">
        <%= form_with model: tweet, local: true do |form| %>
            <div class="field">
                <%= form.label :tweet, class:"label" %>
                <p class="control has-icons-left ">
                    <%= form.text_field :tweet, class:"textarea is-dark", placeholder:"Your tweet" %>
                </p>
            </div>
            
            <div class="field">
                <p class="control">
                    <%= link_to button_name, our_path,class: 'button is-dark' %>
                    <%= link_to 'Cancel', our_path,class: 'button is-light' %>
                </p>
            </div>
        <% end %>
    </div>
</div>
</div>

