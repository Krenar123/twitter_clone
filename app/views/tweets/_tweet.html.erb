<div class="columns is-multiline">  
    <div class="column is-6 is-offset-3">
        <div class="modal" id="modal" >
            <div class="modal-background"></div>
                <div class="modal-card">
                    <header class="modal-card-head">
                    <p class="modal-card-title">Delete Tweet</p>
                    <button class="delete" aria-label="close"></button>
                    </header>
                    <section class="modal-card-body">
                    <p>Are u sure u want to delete this tweet? </p>
                    <!-- Content ... -->
                    </section>
                    <footer class="modal-card-foot">
                    <%= link_to 'Delete', tweet_path(tweet),class: 'is-danger', method: :delete %>
                    <a href="#" style="margin-left:50px;"><button class="button"> Cancel </button> </a> 
                    </footer>
                </div>
            </div>
        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                    <p>
                        <strong>John Smith</strong> <small>@johnsmith</small> <small>31m</small>
                        <br>
                        <%= tweet.tweet %>
                    </p>
                    </div>
                    <nav class="level is-mobile">
                    <div class="level-right">
                        <%= link_to 'Edit', edit_tweet_path(tweet.id),class: 'level-item is-success' %>
                        <%= link_to 'Delete', root_path,{:remote => true,'data-toggle' =>  "modal", 'data-target' => '#modal','class' => 'level_item button_modal is-danger'}  %>
                        <%= link_to 'Cancel', root_path,class: 'level-item is-dark',style: 'margin-left: 12px;' %>
                    </div>
                    </nav>
                </div>
            </article>
        </div>
    </div>
</div>