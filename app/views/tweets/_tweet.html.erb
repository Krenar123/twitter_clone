<div class="columns is-multiline">  
    <div class="column is-6 is-offset-3">
        <div class="box">
            <article class="media">
                <figure class="media-left">
                    <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                    </p>
                </figure>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong>Anonymous</strong>
                            <br>
                            <%= tweet.tweet %>
                            <br>
                            <small>
                            <%= link_to 'Delete', tweet_path(tweet),class: 'button_modal is-danger button_margin',data: {confirm: "Are u sure?"} %>
                            <% if local_assigns[:show] %>
                                <%= link_to 'Cancel', root_path,class: ' is-dark',style: 'margin-left: 12px;' %>
                            <% else %>
                                <%= link_to 'Show',tweet_path(tweet.id) ,class: ' is-dark',style: 'margin-left: 12px;' %>
                            <% end %> Â· <%= time_ago_in_words(tweet.created_at) %> ago</small>
                            
                        </p>
                    </div>
                    
                    <%= render partial:'retweets/retweet', collection: tweet.retweets %>
                    
                </div>
            </article>
           
        </div>
    </div>
</div>