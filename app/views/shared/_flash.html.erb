<div class="columns is-multiline">  
    <div class="column is-6 is-offset-3">
        
        <% flash.each do |name,msg| %>
          <article class="message is-<%= name %>">
            <div class="message-header">
              <p> Something went wrong </p>
            </div>
            <div class="message-body">
              <%= msg %>
            </div>
          </article>
        <% end %>
    </div>
</div>